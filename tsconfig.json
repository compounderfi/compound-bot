{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es2018",
        "dom",
        "es2015.promise"
      ],
    },
    "include": [
      "./src/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "tests"
  ]
}